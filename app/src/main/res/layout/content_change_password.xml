<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ng.techhouse.tinggqr.settings.ChangePassword"
    tools:showIn="@layout/activity_change_password">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/hintcolor1"
        >
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_oldpassword"
            android:layout_marginTop="16dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:singleLine="true"
            android:drawableLeft="@drawable/lock"
            android:drawableTint="@color/colorAccent"
            android:hint="Old Pin"
            android:inputType="numberPassword|number"
            android:maxLength="10" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/hintcolor1"
        >
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_newpassword"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="26dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/lock"
            android:drawableTint="@color/colorAccent"
            android:hint="New Pin"
            android:inputType="numberPassword|number"
            android:maxLength="10" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/hintcolor1"
        >
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_confirmpassword"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="25dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/lock"
            android:drawableTint="@color/colorAccent"
            android:hint="New Pin"
            android:inputType="numberPassword|number"
            android:maxLength="10" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="Confirm Pin"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorAccent"
        android:id="@+id/submitBtn" />


</LinearLayout>


</RelativeLayout>
